<%= form_with url: ask_path, method: :post, class: "d-flex flex-column", data: { "ask_ai_target": "form" , action: "submit->ask-ai#send"} do |f| %>
  <%= f.text_area :query, class: "form-control", minlength: 30, maxlength: (user_signed_in? ? 300 : 150), data: { ask_ai_target: 'dream' }, placeholder: "Enter your dream" %>
  <%= f.submit "Ask Onirix", class: "btn btn-primary", data: { ask_ai_target: 'button' } %>
<% end %>
