<h1>Contact Us</h1>

<%= form_with model: @message, local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content, required: true %>
  </div>
  <%= form.submit "Send Message" %>
<% end %>
